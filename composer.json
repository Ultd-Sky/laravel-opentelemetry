{
    "name": "keepsuit/laravel-opentelemetry",
    "description": "OpenTelemetry integration for laravel",
    "keywords": [
        "keepsuit",
        "laravel",
        "laravel-opentelemetry"
    ],
    "homepage": "https://github.com/keepsuit/laravel-opentelemetry",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabio Capucci",
            "email": "f.capucci@keepsuit.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^9.0",
        "illuminate/support": "^9.0",
        "open-telemetry/opentelemetry": "0.0.16",
        "spatie/laravel-package-tools": "^1.4.3"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.3",
        "keepsuit/laravel-grpc": "^0.2.0",
        "laravel/pint": "^1.2",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0",
        "nuwave/lighthouse": "^5.38",
        "orchestra/testbench": "^7.0",
        "php-http/guzzle7-adapter": "^1.0",
        "phpunit/phpunit": "^9.3",
        "spiral/roadrunner-grpc": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Keepsuit\\LaravelOpenTelemetry\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keepsuit\\LaravelOpenTelemetry\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Keepsuit\\LaravelOpenTelemetry\\LaravelOpenTelemetryServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.20web.it"
        }
    ]
}
